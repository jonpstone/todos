<%= form_with(model: item) do |form| %>
  <% if item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
        <% item.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div class="col-lg-6 mx-1">
    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text"><%= form.label :name %></span>
      </div>
      <%= form.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="col-lg-6 mx-1">
    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text"><%= form.label :due_at %></span>
      </div>
      <%= form.datetime_select :due_at, class: "form-control" %>
    </div>
  </div>

  <%= form.submit "Submit", class: "btn btn-outline-secondary" %>
<% end %>